/* pages/transaction/add/add.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 交易类型选择器 */
.type-selector {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  width: 45%;
  background-color: #f8f9fa;
  transition: all 0.3s;
}

.type-item.active {
  background-color: #3498db;
  color: #fff;
}

.type-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.type-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 金额输入 */
.input-group {
  margin-bottom: 40rpx;
}

.amount-label {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.amount-input {
  width: 100%;
  height: 100rpx;
  font-size: 60rpx;
  text-align: center;
  border-bottom: 2rpx solid #e0e0e0;
  margin-bottom: 20rpx;
}

/* 分类选择 */
.section-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.category-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 23%;
  padding: 20rpx 10rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  background-color: #f8f9fa;
  transition: all 0.3s;
}

.category-item.active {
  background-color: #3498db;
  color: #fff;
}

.category-icon {
  font-size: 50rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
}

/* 日期选择器 */
.date-picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-arrow {
  color: #999;
}

/* 错误信息 */
.error-msg {
  color: #e74c3c;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: block;
}

/* 保存按钮 */
.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-primary {
  background-color: #3498db;
  color: #fff;
}