/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.login-form {
  padding: 60rpx 40rpx;
  background-color: #fff;
  margin-top: 100rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin: 100rpx 40rpx;
}

.logo {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #3498db;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.input:focus {
  border-color: #3498db;
}

.error-msg {
  color: #e74c3c;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: block;
}

.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 20rpx;
}

.btn-primary {
  background-color: #3498db;
  color: #fff;
}

.register-link {
  text-align: center;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #3498db;
  margin-left: 10rpx;
}

.test-account {
  margin-top: 60rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

.test-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  display: block;
  color: #3498db;
}

.test-account text {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}