/* pages/analysis/report/report.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 健康评分卡片 */
.health-score-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.score-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.score-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.score-header .month {
  font-size: 28rpx;
  color: #666;
}

.score-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #3498db;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(52, 152, 219, 0.3);
}

.score-circle .score {
  font-size: 72rpx;
  font-weight: bold;
  color: #fff;
}

.score-circle .max-score {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 10rpx;
}

.level {
  font-size: 36rpx;
  font-weight: bold;
}

/* 月度收支统计 */
.stats-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  flex: 1;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
}

.stat-value.income {
  color: #27ae60;
}

.stat-value.expense {
  color: #e74c3c;
}

.stat-value.balance {
  color: #3498db;
}

/* 图表卡片 */
.chart-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.chart {
  width: 300px;
  height: 300px;
  margin: 0 auto 30rpx;
}

.trend-chart {
  width: 300px;
  height: 200px;
  margin: 0 auto;
}

/* 分类列表 */
.category-list {
  margin-top: 20rpx;
}

.category-item {
  margin-bottom: 20rpx;
}

.category-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 28rpx;
  color: #333;
}

.category-percentage {
  font-size: 28rpx;
  font-weight: bold;
  color: #3498db;
}

.category-bar {
  height: 20rpx;
  background-color: #ecf0f1;
  border-radius: 10rpx;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  background-color: #3498db;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

/* 评估维度详情 */
.assessment-dimensions {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.dimension-card {
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #3498db;
}

.dimension-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.dimension-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.dimension-score {
  font-size: 26rpx;
  font-weight: bold;
  color: #3498db;
}

/* 进度条样式 */
.dimension-progress {
  height: 24rpx;
  background-color: #ecf0f1;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #3498db 0%, #2ecc71 100%);
  border-radius: 12rpx;
  transition: width 0.5s ease-in-out;
}

.dimension-indicators {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.indicator-item {
  flex: 1;
  min-width: 150rpx;
  padding: 10rpx;
  background-color: #fff;
  border-radius: 6rpx;
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.05);
}

.indicator-name {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.indicator-value {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* AI建议 */
.advice-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.advice-list {
  margin-top: 20rpx;
}

.advice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
}

.advice-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
  margin-top: -5rpx;
}

.advice-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
}

/* 下个月收支预测 */
.prediction-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.prediction-header {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.stable-expenses {
  margin-bottom: 30rpx;
}

.subsection-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.expense-list {
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.expense-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.expense-item:last-child {
  border-bottom: none;
}

.expense-category {
  font-size: 28rpx;
  color: #333;
}

.expense-amount {
  font-size: 28rpx;
  font-weight: bold;
  color: #e74c3c;
}

.prediction-advice {
  margin-top: 20rpx;
}